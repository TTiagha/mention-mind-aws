# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1
AWS_PROFILE=default

# MentionMind API Configuration
MENTIONMIND_API_KEY=your_api_key
MENTIONMIND_API_URL=https://api.mentionmind.com/v1
MENTIONMIND_API_VERSION=v1

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development
APP_NAME=mentionmind-aws

# DynamoDB Configuration
DYNAMODB_TABLE_NAME=mentionmind-mentions
DYNAMODB_GSI_NAME=date-index

# Lambda Configuration
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY_SIZE=256
LAMBDA_LOG_LEVEL=INFO

# Monitoring Configuration
ALERT_EMAIL=your-email@example.com
METRIC_NAMESPACE=MentionMind
